amarillo = #FBF300

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?-r0u29');
	src:url('../fonts/icomoon.eot?#iefix-r0u29') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-r0u29') format('woff'),
		url('../fonts/icomoon.ttf?-r0u29') format('truetype'),
		url('../fonts/icomoon.svg?-r0u29#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-googleplus:before {
	content: "\e600";
}
.icon-facebook:before {
	content: "\e601";
}
.icon-twitter:before {
	content: "\e602";
}
.icon-feed:before {
	content: "\e603";
}

body
	background-color #CBCBCB
	color black
	font-family Tahoma, sans-serif
	font-size 16px
	margin 0
	padding 0 3em
a 
	color black
	text-decoration none
header
	background-color black
	background-image url(../imgs/aficion-header.png)
	background-repeat no-repeat
	background-position right bottom
	h1
		color transparent
		display inline-block
		margin 0.2em 0 0.2em 0.2em
		padding 0
	input
		color black		
		margin  0.5em 0.3em 0 5.8em
		height 1.7em
		position relative
		width 13em
	[class^="icon-"], [class*=" icon-"]
		background-color black
		border-radius 0.9em
		color #C3C3C3
		font-size 1.8em
	#boton-sesion
		background-color white
		font-size 18px
		font-variant small-caps
		font-weight bolder
		padding 0.1em 0.8em
		position relative
		top -0.2em
	#botones-header
		position relative
		margin 4.5em 0.3em 0 0
		text-align right
	#contenedor-botones
		display inline-block
		float right
	#logo
		background-image url(../imgs/logo-completo.png)
		background-position left top
		background-repeat no-repeat
		color transparent
		display inline-block
		height 140px
		width 540px
nav
	background-color amarillo
	font-size 20px
	ul 
		list-style none
		margin 0
		padding 0
		text-align center
		li 
			display inline-block
			vertical-align top
			a
				color: black;
				display: block;
				font-variant small-caps
				padding: 0.4em 3.5em;
				text-align: center;
				text-decoration: none;	
				border-bottom: solid 4px transparent;
				-o-transition: all .15s ease-in-out;
				-moz-transition: all .15s ease-in-out;
				-webkit-transition: all .15s ease-in-out;
				transition: all .15s ease-in-out;
			a:hover
				border-bottom: solid 4px black;		

