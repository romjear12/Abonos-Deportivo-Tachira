@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?-r0u29');
	src:url('../fonts/icomoon.eot?#iefix-r0u29') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-r0u29') format('woff'),
		url('../fonts/icomoon.ttf?-r0u29') format('truetype'),
		url('../fonts/icomoon.svg?-r0u29#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-googleplus:before {
	content: "\e600";
}
.icon-facebook:before {
	content: "\e601";
}
.icon-twitter:before {
	content: "\e602";
}
.icon-feed:before {
	content: "\e603";
}

